# Environment variables
DEVELOPMENT=true
AUTH_ENABLED=true

LOG_LEVEL=debug
LOG_JSON=false
LOG_COLORIZE_LINE=true
LOG_UNESCAPE_MULTILINE=true
LOG_DISABLE_TIMESTAMP=false

# Http API Configuration
HTTP_API_PORT=:14000
HTTP_API_LIVENESS_PROBE_PORT=:14001
HTTP_API_READINESS_PROBE_PORT=:14002
HTTP_API_CORS_ALLOWED_ORIGINS=http://localhost:14000,http://localhost:14200

# GoDNS Application ports
DNS_SERVER_PORT=:53
DNS_SERVER_READYNESS_PROBE_PORT=:14003
DNS_SERVER_LIVENESS_PROBE_PORT=:14004
DNS_ENABLE_HTTP_API=true

# Docker Compose Infrastructure ports (14100+)
# PostgreSQL: 14100
# Keycloak: 14101 & 14102
# Valkey: 14103
POSTGRES_PORT=14100

# Keycloak Configuration
KEYCLOAK_URL=http://localhost:14101
KEYCLOAK_REALM=godns
KEYCLOAK_PORT_HTTP=14101
KEYCLOAK_PORT_HTTPS=14102
KEYCLOAK_ADMIN_USER=admin
KEYCLOAK_ADMIN_PASSWORD=admin
KEYCLOAK_HOSTNAME=localhost
KEYCLOAK_PROXY=edge
KEYCLOAK_DB_NAME=keycloak
KEYCLOAK_DB_USER=keycloak
KEYCLOAK_DB_PASSWORD=keycloak_password
KEYCLOAK_API_CLIENT_ID=godns-api
KEYCLOAK_CLI_CLIENT_ID=godns-cli
TEST_USER=testuser
TEST_PASSWORD=password
TEST_EMAIL=testuser@godns.local

VALKEY_USERNAME=default
VALKEY_TOKEN=mysecretpassword
VALKEY_HOST=localhost
VALKEY_PORT=14103
